#!/bin/bash

gcc roteador.c -lpthread -o roteador

gnome-terminal --geometry=25x25 -- ./roteador 2
gnome-terminal --geometry=25x25 -- ./roteador 5
gnome-terminal --geometry=25x25 -- ./roteador 8
gnome-terminal --geometry=25x25 -- ./roteador 11
gnome-terminal --geometry=25x25 -- ./roteador 14
gnome-terminal --geometry=25x25 -- ./roteador 17
rm -rf roteador
